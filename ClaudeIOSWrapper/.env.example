# Claude iOS Wrapper - Environment Variables
# Copy this file to .env and fill in your actual values

# ======================
# CLAUDE API CONFIGURATION
# ======================
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key

# Claude API Settings (optional overrides)
CLAUDE_API_URL=https://api.anthropic.com/v1/messages
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096

# ======================
# FIREBASE CONFIGURATION
# ======================
# These values come from your GoogleService-Info.plist
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_APP_ID=your_firebase_app_id

# ======================
# APP CONFIGURATION
# ======================
# Your app's bundle identifier
APP_BUNDLE_ID=com.yourcompany.claudewrapper

# App version and build number
APP_VERSION=1.0
APP_BUILD_NUMBER=1

# ======================
# LOGGING CONFIGURATION
# ======================
# Enable/disable different types of logging
ENABLE_ANALYTICS_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_DEBUG_LOGGING=false

# Maximum number of logs to keep locally
MAX_LOCAL_LOGS=1000

# ======================
# SECURITY SETTINGS
# ======================
# Enable/disable security features
ENABLE_SSL_PINNING=true
ENABLE_BIOMETRIC_AUTH=false
REQUIRE_SECURE_ENCLAVE=false

# ======================
# DEVELOPMENT SETTINGS
# ======================
# Development mode settings (set to false for production)
DEBUG_MODE=true
MOCK_API_RESPONSES=false
BYPASS_AUTH_FOR_TESTING=false

# ======================
# PERFORMANCE SETTINGS
# ======================
# API timeout settings (in seconds)
API_TIMEOUT=30
CONNECTION_TIMEOUT=10
READ_TIMEOUT=30

# Cache settings
ENABLE_MESSAGE_CACHING=true
MAX_CACHED_MESSAGES=100

# ======================
# UI CUSTOMIZATION
# ======================
# App appearance settings
DEFAULT_THEME=system
ENABLE_HAPTIC_FEEDBACK=true
ANIMATION_DURATION=0.3

# ======================
# FEATURES FLAGS
# ======================
# Enable/disable features
ENABLE_CONVERSATION_EXPORT=true
ENABLE_MESSAGE_SHARING=true
ENABLE_VOICE_MESSAGES=false
ENABLE_IMAGE_ANALYSIS=false

# ======================
# ANALYTICS CONFIGURATION
# ======================
# Analytics service settings
ANALYTICS_PROVIDER=firebase
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# ======================
# INSTRUCTIONS
# ======================
# 1. Copy this file to .env (without .example extension)
# 2. Fill in your actual values
# 3. Never commit .env to version control
# 4. Add .env to your .gitignore file
# 5. For Xcode configuration, add environment variables in:
#    Product > Scheme > Edit Scheme > Run > Environment Variables

# ======================
# SECURITY NOTES
# ======================
# - Keep your API keys secure and never share them
# - Use different keys for development and production
# - Regularly rotate your API keys
# - Monitor API usage in your respective dashboards
# - Enable appropriate security rules in Firebase
# - Use App Store Connect for production environment variables